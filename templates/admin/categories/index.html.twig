{% extends "base.html.twig" %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% include "_partials/_adminnav.html.twig" %}
			<main class="col-9 border border-light bg-white p-2">
				<h1>Liste des catégories</h1>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Slug</th>
							<th>Ordre</th>
							<th colspan="2">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<td>{{ categorie.id }}</td>
								<td>{{ categorie.name }}</td>
								<td>{{ categorie.slug }}</td>
								<td>{{ categorie.categoryOrder }}</td>
								<td>
									<a href="{{ path('admin_categories_edit', {id: categorie.id})}}" class="btn btn-success">Modifier</a>
								</td>
								<td style="vertical-align: middle;">
									{% if categorie.products is not empty %}
										<span>Cette catégorie ne peut pas être supprimée car elle est associée à des produits.</span>
									{% else %}
										<a href="{{ path('admin_categories_delete', {id: categorie.id})}}" class="btn btn-error">Supprimer</a>
									{% endif %}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</main>
		</div>
	</div>
{% endblock %}
